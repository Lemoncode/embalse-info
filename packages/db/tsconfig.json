{
  "compilerOptions": {
    "target": "ES2017",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "#*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}